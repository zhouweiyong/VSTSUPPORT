<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_fs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_e94415"
        android:ellipsize="middle"
        android:gravity="center"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_version_fs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_copyright"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_right_arr"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="版权信息"
            android:textColor="@color/color_323232"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/common_divider" />

        <TextView
            android:id="@+id/tv_update_fs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_update"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_right_arr"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="检测更新"
            android:textColor="@color/color_323232"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/common_divider" />

        <TextView
            android:id="@+id/tv_logout_fs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_logout"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_right_arr"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="退出"
            android:textColor="@color/color_323232"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>