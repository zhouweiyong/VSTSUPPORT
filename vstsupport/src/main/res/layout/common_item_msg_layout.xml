<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">


    <!--top-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/common_button_frame"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="GD北京迅捷科技有限公司"
                android:textColor="@color/color_323232"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/has_calculate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:drawableLeft="@mipmap/become_limit_icon"
                android:paddingRight="12dp"
                android:textColor="@color/color_323232"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_expire_3days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-2dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/icon_expire_3days"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/second_line_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="ORASS"
            android:textColor="@color/color_646464"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/common_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/count_total_des_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="应 收 余 额"
                android:textColor="@color/color_999999"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/count_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/count_total_des_tv"
                android:text="￥427790.00"
                android:textColor="@color/color_FE6364"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expire_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/count_expiring_des_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="应收到期日"
                android:textColor="@color/color_999999"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/count_expiring_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/count_expiring_des_tv"
                android:text="2015-1-31"
                android:textColor="@color/color_323232"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/count_distance_des_day_loy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/count_distance_des_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="距离到期日"
                android:textColor="@color/color_999999"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/count_distance_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/count_distance_des_day_tv"
                android:text="1天"
                android:textColor="@color/color_323232"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/open_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:src="@mipmap/common_down_icon" />

        </RelativeLayout>

        <!--center_open_close-->
        <LinearLayout
            android:id="@+id/common_item_open_close_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">
        <include

            layout="@layout/limit_check_item_open_close_layout"/>

            </LinearLayout>


        <RelativeLayout
            android:id="@+id/in_db_des_day_loy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/in_db_des_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="在库天数："
                android:textColor="@color/color_999999"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/in_db_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/in_db_des_day_tv"
                android:text="1天"
                android:textColor="@color/color_323232"
                android:textSize="14sp" />


        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
