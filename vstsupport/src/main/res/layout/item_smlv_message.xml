<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/layout_iv_ism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_ism"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/ic_expire_msg" />

            <TextView
                android:id="@+id/tv_num_ism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/iv_ism"
                android:layout_alignTop="@id/iv_ism"
                android:background="@mipmap/msg_num_bg"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content_layout_ism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/layout_iv_ism"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_ism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="title"
                android:textColor="@color/color_323232"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingRight="50dp"/>

            <TextView
                android:id="@+id/tv_second_title_ism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="dddd"
                android:textColor="@color/color_b4b4b4"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content_ism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="content.."
                android:textColor="@color/color_646464"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_ism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/content_layout_ism"
            android:text="16:12"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line_ism"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/common_divider" />
</LinearLayout>