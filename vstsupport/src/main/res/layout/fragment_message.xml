<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:PullToRefresh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title_fm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_e94415"
        android:ellipsize="middle"
        android:gravity="center"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <com.vst.vstsupport.view.swipemenulistview.PullToSwipeMenuListView
        android:id="@+id/ptrsmlv_fm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:divider="@null"
        android:paddingTop="10dp" />

</RelativeLayout>