<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/common_titlebar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:text="您需要通过邮件方式联系我们修改密码"
        android:textColor="@color/color_323232"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_afp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_fpwd"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="写邮件"
            android:textColor="@color/color_c04b3f" />

        <EditText
            android:id="@+id/et_email_afp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btn_afp"
            android:layout_weight="1"
            android:background="@mipmap/et_fpwd_bg"
            android:enabled="false"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:paddingLeft="45dp"
            android:text="xielingling@vst.hk"
            android:textColor="@color/color_323232"
            android:textColorHighlight="@color/color_b4b4b4"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_afp"
            android:layout_alignLeft="@+id/btn_afp"
            android:layout_marginLeft="-5dp"
            android:src="@mipmap/ic_flag_fpwd" />
    </RelativeLayout>
</LinearLayout>